{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    "L1Name": {
      "type": "string"
    },
    "Target": {
      "type": "string"
    },
    "ResourceId": {
      "type": "string"
    }
  },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2025-06-01",
            "name": "[parameters('L1Name')]",
            "location": "eastus2",
            "sku": {
                "name": "S0"
            },
            "kind": "AIServices",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "apiProperties": {},
                "customSubDomainName": "[parameters('L1Name')]",
                "networkAcls": {
                    "defaultAction": "Allow",
                    "virtualNetworkRules": [],
                    "ipRules": []
                },
                "allowProjectManagement": true,
                "publicNetworkAccess": "Enabled",
                "disableLocalAuth": true
            }
        },
        {
            "type": "Microsoft.CognitiveServices/accounts/connections",
            "apiVersion": "2025-06-01",
            "name": "[concat(parameters('L1Name'),'/storageConnection')]",
            "dependsOn": [
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('L1Name'))]"
            ],
            "properties": {
                "authType": "AAD",
                "category": "AzureStorageAccount",
                "target": "[parameters('Target')]",
                "useWorkspaceManagedIdentity": false,
                "isSharedToAll": true,
                "sharedUserList": [],
                "peRequirement": "NotRequired",
                "peStatus": "NotApplicable",
                "metadata": {
                    "ApiType": "Azure",
                    "ResourceId": "[parameters('ResourceId')]"
                }
            }
        },
        {
            "type": "Microsoft.CognitiveServices/accounts/defenderForAISettings",
            "apiVersion": "2025-06-01",
            "name": "[concat(parameters('L1Name'),'/Default')]",
            "dependsOn": [
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('L1Name'))]"
            ],
            "properties": {
                "state": "Disabled"
            }
        }
    ]
}