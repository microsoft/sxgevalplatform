{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "name": "[parameters('L2Name')]",
      "properties": {
        "hostNameType": "[parameters('HostNameType')]",
        "siteName": "[parameters('SiteName')]",
        "sslState": "[parameters('SslState')]",
        "thumbprint": "[reference(resourceId('Microsoft.Web/certificates', parameters('Certificate')), '2023-01-01', 'Full').properties.thumbprint]"
      },
      "type": "Microsoft.Web/sites/hostNameBindings",
      "condition": "[parameters('newOrExisting')]",
      "apiVersion": "2022-09-01"
    }
  ],
  "parameters": {
    "L2Name": {
      "type": "string"
    },
    "HostNameType": {
      "type": "string"
    },
    "SiteName": {
      "type": "string"
    },
    "Certificate": {
      "type": "string"
    },
    "SslState": {
      "type": "string"
    },
    "newOrExisting": {
      "type": "bool"
    }
  }
}