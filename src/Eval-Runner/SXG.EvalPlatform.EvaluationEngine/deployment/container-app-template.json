{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerAppName": {
            "type": "string",
            "defaultValue": "eval-framework-app",
            "metadata": {
                "description": "Name of the Container App"
            }
        },
        "containerRegistryName": {
            "type": "string",
            "defaultValue": "evalplatformregistry",
            "metadata": {
                "description": "Name of the Azure Container Registry"
            }
        },
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "rg-sxg-agent-evaluation-platform",
            "metadata": {
                "description": "Resource Group Name"
            }
        },
        "imageTag": {
            "type": "string",
            "defaultValue": "latest",
            "metadata": {
                "description": "Container image tag"
            }
        },
        "runtimeEnvironment": {
            "type": "string",
            "defaultValue": "Development",
            "allowedValues": [
                "Development",
                "PPE",
                "Production"
            ],
            "metadata": {
                "description": "Runtime environment for configuration selection"
            }
        },
        "minReplicas": {
            "type": "int",
            "defaultValue": 3,
            "metadata": {
                "description": "Minimum number of replicas"
            }
        },
        "maxReplicas": {
            "type": "int",
            "defaultValue": 10,
            "metadata": {
                "description": "Maximum number of replicas"
            }
        },
        "targetPort": {
            "type": "int",
            "defaultValue": 8080,
            "metadata": {
                "description": "Target port for the container"
            }
        },
        "cpuCores": {
            "type": "string",
            "defaultValue": "2.0",
            "metadata": {
                "description": "CPU cores allocation (optimized for concurrent processing)"
            }
        },
        "memorySize": {
            "type": "string",
            "defaultValue": "4.0Gi",
            "metadata": {
                "description": "Memory allocation (optimized for concurrent processing)"
            }
        },
        "managedEnvironmentName": {
            "type": "string",
            "defaultValue": "eval-framework-env",
            "metadata": {
                "description": "Container Apps managed environment name"
            }
        },
        "applicationInsightsConnectionString": {
            "type": "securestring",
            "metadata": {
                "description": "Application Insights connection string"
            }
        },
        "azureStorageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Azure Storage Account name for queue scaling"
            }
        },
        "azureQueueName": {
            "type": "string",
            "defaultValue": "evaluation-requests",
            "metadata": {
                "description": "Azure Queue name for scaling"
            }
        }
    },
    "variables": {
        "containerRegistryFqdn": "[concat(parameters('containerRegistryName'), '.azurecr.io')]",
        "containerImageName": "[concat(variables('containerRegistryFqdn'), '/eval-framework-app:', parameters('imageTag'))]",
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('managedEnvironmentName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-03-01",
            "name": "[parameters('containerAppName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "managedEnvironmentId": "[variables('managedEnvironmentId')]",
                "configuration": {
                    "secrets": [
                        {
                            "name": "application-insights-connection-string",
                            "value": "[parameters('applicationInsightsConnectionString')]"
                        }
                    ],
                    "registries": [
                        {
                            "server": "[variables('containerRegistryFqdn')]",
                            "identity": "system"
                        }
                    ],
                    "ingress": {
                        "external": true,
                        "targetPort": "[parameters('targetPort')]",
                        "allowInsecure": false,
                        "traffic": [
                            {
                                "weight": 100,
                                "latestRevision": true
                            }
                        ]
                    }
                },
                "template": {
                    "revisionSuffix": "[concat('rev-', utcNow('yyyyMMddHHmmss'))]",
                    "containers": [
                        {
                            "name": "eval-framework-app",
                            "image": "[variables('containerImageName')]",
                            "resources": {
                                "cpu": "[parameters('cpuCores')]",
                                "memory": "[parameters('memorySize')]"
                            },
                            "env": [
                                {
                                    "name": "RUNTIME_ENVIRONMENT",
                                    "value": "[parameters('runtimeEnvironment')]"
                                },
                                {
                                    "name": "PYTHONPATH",
                                    "value": "/app/src"
                                },
                                {
                                    "name": "PYTHON_UNBUFFERED",
                                    "value": "1"
                                },
                                {
                                    "name": "LOG_LEVEL",
                                    "value": "INFO"
                                },
                                {
                                    "name": "MAX_DATASET_CONCURRENCY",
                                    "value": "3"
                                },
                                {
                                    "name": "MAX_METRICS_CONCURRENCY",
                                    "value": "8"
                                },
                                {
                                    "name": "EVALUATION_TIMEOUT",
                                    "value": "30"
                                },
                                {
                                    "name": "HTTP_POOL_CONNECTIONS",
                                    "value": "20"
                                },
                                {
                                    "name": "HTTP_POOL_MAXSIZE",
                                    "value": "10"
                                },
                                {
                                    "name": "HTTP_SESSION_LIFETIME",
                                    "value": "3600"
                                },
                                {
                                    "name": "AZURE_STORAGE_TIMEOUT",
                                    "value": "30"
                                },
                                {
                                    "name": "AZURE_STORAGE_CONNECT_TIMEOUT",
                                    "value": "60"
                                },
                                {
                                    "name": "ENABLE_PERFORMANCE_LOGGING",
                                    "value": "true"
                                }
                            ]
                        }
                    ],
                    "scale": {
                        "minReplicas": "[parameters('minReplicas')]",
                        "maxReplicas": "[parameters('maxReplicas')]",
                        "rules": [
                            {
                                "name": "azure-storage-queue-scaling",
                                "custom": {
                                    "type": "azure-queue",
                                    "metadata": {
                                        "queueName": "[parameters('azureQueueName')]",
                                        "queueLength": "5",
                                        "accountName": "[parameters('azureStorageAccountName')]"
                                    },
                                    "auth": [
                                        {
                                            "triggerParameter": "connection",
                                            "identity": "system"
                                        }
                                    ]
                                }
                            },
                            {
                                "name": "cpu-scaling-rule",
                                "http": {
                                    "metadata": {
                                        "concurrentRequests": "10"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "identity": {
                "type": "SystemAssigned"
            }
        }
    ],
    "outputs": {
        "containerAppFqdn": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName'))).configuration.ingress.fqdn]"
        },
        "containerAppId": {
            "type": "string",
            "value": "[resourceId('Microsoft.App/containerApps', parameters('containerAppName'))]"
        }
    }
}