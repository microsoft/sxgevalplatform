{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"paths": [
  "servicePackageLink"
],
"parameters": {
    "appService_name": {
      "type": "string",
      "metadata": {
        "description": "Name of the App Service"
      }
    },
    "appService_location": {
      "type": "string",
      "defaultValue": "East US",
      "metadata": {
        "description": "Location for the App Service"
      }
    },
    "appServicePlan_externalid": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the App Service Plan"
      }
    },
    "userAssignedIdentity_resourceId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the User Assigned Managed Identity"
      }
    },
    "Sites_buildVersion": {
      "type": "string",
      "metadata": {
        "description": "Build version for the deployment"
      }
    },
    "servicePackageLink": {
      "type": "string",
      "metadata": {
        "description": "URL or path to the deployment package"
      }
    },
    "alwaysOn": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Whether the web app should remain loaded after 20 minutes of inactivity."
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Environment name (e.g., Production, Development)"
      }
    },
    "appInsightsConnectionString": {
      "type": "string",
      "metadata": {
        "description": "Application Insights Connection String"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Azure Storage Account Name"
      }
    },
    "azureAdClientId": {
      "type": "string",
      "metadata": {
        "description": "Azure AD Application Client ID"
      }
    },
    "azureAdTenantId": {
      "type": "string",
      "defaultValue": "72f988bf-86f1-41af-91ab-2d7cd011db47",
      "metadata": {
        "description": "Azure AD Tenant ID"
      }
    },
    "azureAdAudience": {
      "type": "string",
      "metadata": {
        "description": "Azure AD Audience URI"
      }
    },
    "serviceBusConnection": {
      "type": "string",
      "metadata": {
        "description": "Service Bus Connection Endpoint"
      }
    },
    "redisEndpoint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Redis Cache Endpoint"
      }
    },
    "redisInstanceName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Redis Cache Instance Name"
      }
    },
    "dataVerseApiEndpoint": {
      "type": "string",
      "metadata": {
        "description": "DataVerse API Endpoint"
      }
    },
    "dataVerseScope": {
      "type": "string",
      "metadata": {
        "description": "DataVerse API Scope"
      }
    },
    "enableAuthentication": {
      "type": "string",
      "defaultValue": "False",
      "metadata": {
        "description": "Enable Authentication Feature Flag"
      }
    },
    "enableDataCaching": {
      "type": "string",
      "defaultValue": "False",
      "metadata": {
        "description": "Enable Data Caching Feature Flag"
      }
    },
    "enablePublishingToDataPlatform": {
      "type": "string",
      "defaultValue": "False",
      "metadata": {
        "description": "Enable Publishing Eval Results to Data Platform Feature Flag"
      }
    },
    "cacheProvider": {
      "type": "string",
      "defaultValue": "None",
      "metadata": {
        "description": "Cache Provider (None, Redis, Memory)"
      }
    },
    "swaggerEnabled": {
      "type": "string",
      "defaultValue": "true",
      "metadata": {
        "description": "Enable Swagger UI"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2024-11-01",
      "name": "[parameters('appService_name')]",
      "location": "[parameters('appService_location')]",
      "kind": "app,linux",
      "identity": {
        "type": "SystemAssigned, UserAssigned",
        "userAssignedIdentities": {
          "[parameters('userAssignedIdentity_resourceId')]": {}
        }
      },
      "properties": {
        "enabled": true,
        "serverFarmId": "[parameters('appServicePlan_externalid')]",
        "reserved": true,
        "isXenon": false,
        "hyperV": false,
        "dnsConfiguration": {},
        "outboundVnetRouting": {
          "allTraffic": false,
          "applicationTraffic": false,
          "contentShareTraffic": false,
          "imagePullTraffic": false,
          "backupRestoreTraffic": false
        },
        "siteConfig": {
          "numberOfWorkers": 1,
          "linuxFxVersion": "DOTNETCORE|8.0",
          "acrUseManagedIdentityCreds": false,
          "alwaysOn": "[parameters('alwaysOn')]",
          "http20Enabled": true,
          "functionAppScaleLimit": 0,
          "minimumElasticInstanceCount": 1,
          "appSettings": [
            {
              "name": "Sites_buildVersion",
              "value": "[parameters('Sites_buildVersion')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "[parameters('servicePackageLink')]"
            },
            {
              "name": "AllowedHosts",
              "value": "*"
            },
            {
              "name": "ApiSettings__Environment",
              "value": "[parameters('environment')]"
            },
            {
              "name": "ApiSettings__Version",
              "value": "1.0.0"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[parameters('appInsightsConnectionString')]"
            },
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "Authentication__ClockSkewMinutes",
              "value": "5"
            },
            {
              "name": "Authentication__MISE__AllowStandardBearerTokens",
              "value": "True"
            },
            {
              "name": "Authentication__MISE__EnableEventLogging",
              "value": "True"
            },
            {
              "name": "Authentication__MISE__RequireProtectedTokens",
              "value": "False"
            },
            {
              "name": "Authentication__RequireHttpsMetadata",
              "value": "True"
            },
            {
              "name": "Authentication__SaveToken",
              "value": "False"
            },
            {
              "name": "Authentication__ValidateAudience",
              "value": "True"
            },
            {
              "name": "Authentication__ValidateIssuer",
              "value": "True"
            },
            {
              "name": "Authentication__ValidateIssuerSigningKey",
              "value": "True"
            },
            {
              "name": "Authentication__ValidateLifetime",
              "value": "True"
            },
            {
              "name": "AzureAd__Audience",
              "value": "[parameters('azureAdAudience')]"
            },
            {
              "name": "AzureAd__ClientId",
              "value": "[parameters('azureAdClientId')]"
            },
            {
              "name": "AzureAd__Instance",
              "value": "https://login.microsoftonline.com/"
            },
            {
              "name": "AzureAd__TenantId",
              "value": "[parameters('azureAdTenantId')]"
            },
            {
              "name": "AzureAd__ValidIssuers__0",
              "value": "https://login.microsoftonline.com/common/v2.0"
            },
            {
              "name": "AzureAd__ValidIssuers__1",
              "value": "https://sts.windows.net/common/"
            },
            {
              "name": "AzureStorage__AccountName",
              "value": "[parameters('storageAccountName')]"
            },
            {
              "name": "AzureStorage__ConfigurationContainer",
              "value": "eval-metrics-configuration"
            },
            {
              "name": "AzureStorage__DataSetFolderName",
              "value": "datasets"
            },
            {
              "name": "AzureStorage__DatasetsFolderName",
              "value": "datasets"
            },
            {
              "name": "AzureStorage__DataSetsTable",
              "value": "DataSetsTable"
            },
            {
              "name": "AzureStorage__DefaultConfigurationBlob",
              "value": "default-metric-configuration.json"
            },
            {
              "name": "AzureStorage__DefaultMetricsConfiguration",
              "value": "default-metric-configuration.json"
            },
            {
              "name": "AzureStorage__EvalResultsFolderName",
              "value": "eval-results"
            },
            {
              "name": "AzureStorage__EvalRunTable",
              "value": "EvalRunsTable"
            },
            {
              "name": "AzureStorage__MetricsConfigurationsFolderName",
              "value": "metrics-configurations"
            },
            {
              "name": "AzureStorage__MetricsConfigurationsTable",
              "value": "MetricsConfigurationsTable"
            },
            {
              "name": "AzureStorage__PlatformConfigurationsContainer",
              "value": "platform-configurations"
            },
            {
              "name": "Cache__Provider",
              "value": "[parameters('cacheProvider')]"
            },
            {
              "name": "Cache__Redis__Endpoint",
              "value": "[parameters('redisEndpoint')]"
            },
            {
              "name": "Cache__Redis__InstanceName",
              "value": "[parameters('redisInstanceName')]"
            },
            {
              "name": "DataVerseAPI__DatasetEnrichmentRequestAPIEndPoint",
              "value": "[parameters('dataVerseApiEndpoint')]"
            },
            {
              "name": "DataVerseAPI__Scope",
              "value": "[parameters('dataVerseScope')]"
            },
            {
              "name": "FeatureFlags__EnableAuthentication",
              "value": "[parameters('enableAuthentication')]"
            },
            {
              "name": "FeatureFlags__EnableDataCaching",
              "value": "[parameters('enableDataCaching')]"
            },
            {
              "name": "FeatureFlags__EnablePublishingEvalResultsToDataPlatform",
              "value": "[parameters('enablePublishingToDataPlatform')]"
            },
            {
              "name": "Logging__ApplicationInsights__LogLevel__Default",
              "value": "Information"
            },
            {
              "name": "Logging__ApplicationInsights__LogLevel__Microsoft",
              "value": "Warning"
            },
            {
              "name": "Logging__LogLevel__Default",
              "value": "Information"
            },
            {
              "name": "Logging__LogLevel__Microsoft.ApplicationInsights",
              "value": "Warning"
            },
            {
              "name": "Logging__LogLevel__Microsoft.AspNetCore",
              "value": "Warning"
            },
            {
              "name": "OpenTelemetry__CloudRoleName",
              "value": "SXG-EvalPlatform-API"
            },
            {
              "name": "OpenTelemetry__EnableApplicationInsights",
              "value": "True"
            },
            {
              "name": "OpenTelemetry__EnableConsoleExporter",
              "value": "False"
            },
            {
              "name": "OpenTelemetry__ExportTimeoutMilliseconds",
              "value": "30000"
            },
            {
              "name": "OpenTelemetry__MaxExportBatchSize",
              "value": "100"
            },
            {
              "name": "OpenTelemetry__SamplingRatio",
              "value": "1"
            },
            {
              "name": "OpenTelemetry__ServiceName",
              "value": "SXG-EvalPlatform-API"
            },
            {
              "name": "OpenTelemetry__ServiceVersion",
              "value": "1.0.0"
            },
            {
              "name": "RateLimiting__IpPolicy__PermitLimit",
              "value": "100"
            },
            {
              "name": "RateLimiting__IpPolicy__WindowSeconds",
              "value": "60"
            },
            {
              "name": "RateLimiting__SessionPolicy__PermitLimit",
              "value": "30"
            },
            {
              "name": "RateLimiting__SessionPolicy__WindowSeconds",
              "value": "60"
            },
            {
              "name": "RateLimiting__UserPolicy__PermitLimit",
              "value": "50"
            },
            {
              "name": "RateLimiting__UserPolicy__WindowSeconds",
              "value": "60"
            },
            {
              "name": "SecurityLogging__AlertThresholds__FailedAuthenticationAttempts",
              "value": "5"
            },
            {
              "name": "SecurityLogging__AlertThresholds__RateLimitViolations",
              "value": "3"
            },
            {
              "name": "SecurityLogging__AlertThresholds__SuspiciousActivityScore",
              "value": "70"
            },
            {
              "name": "SecurityLogging__AlertThresholds__TimeWindowMinutes",
              "value": "10"
            },
            {
              "name": "SecurityLogging__EnableApplicationInsightsSecurity",
              "value": "True"
            },
            {
              "name": "SecurityLogging__Enabled",
              "value": "True"
            },
            {
              "name": "SecurityLogging__IncludePII",
              "value": "False"
            },
            {
              "name": "SecurityLogging__LogLevel",
              "value": "Information"
            },
            {
              "name": "SecurityLogging__RetentionDays",
              "value": "90"
            },
            {
              "name": "SecurityLogging__ShutdownFlushDelayMs",
              "value": "5000"
            },
            {
              "name": "ServiceBus__EventBusConnection",
              "value": "[parameters('serviceBusConnection')]"
            },
            {
              "name": "SwaggerUI__Enabled",
              "value": "[parameters('swaggerEnabled')]"
            },
            {
              "name": "Telemetry__AppInsightsConnectionString",
              "value": "[parameters('appInsightsConnectionString')]"
            },
            {
              "name": "WEBSITE_AUTH_AAD_ALLOWED_TENANTS",
              "value": "[parameters('azureAdTenantId')]"
            },
            {
              "name": "WEBSITE_AUTH_DISABLE_WWWAUTHENTICATE_HEADER",
              "value": "true"
            },
            {
              "name": "WEBSITE_HTTPLOGGING_RETENTION_DAYS",
              "value": "3"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "false"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_Mode",
              "value": "Recommended"
            }
          ]
        },
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": true,
        "clientAffinityProxyEnabled": false,
        "clientCertEnabled": false,
        "clientCertMode": "Required",
        "hostNamesDisabled": false,
        "ipMode": "IPv4",
        "containerSize": 0,
        "dailyMemoryTimeQuota": 0,
        "httpsOnly": true,
        "endToEndEncryptionEnabled": false,
        "redundancyMode": "None",
        "publicNetworkAccess": "Enabled",
        "storageAccountRequired": false,
        "keyVaultReferenceIdentity": "SystemAssigned"
      }
    },
    {
      "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('appService_name'), '/ftp')]",
      "location": "[parameters('appService_location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('appService_name'))]"
      ],
      "properties": {
        "allow": false
      }
    },
    {
      "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('appService_name'), '/scm')]",
      "location": "[parameters('appService_location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('appService_name'))]"
      ],
      "properties": {
        "allow": false
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('appService_name'), '/web')]",
      "location": "[parameters('appService_location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('appService_name'))]"
      ],
      "properties": {
        "numberOfWorkers": 1,
        "defaultDocuments": [
          "Default.htm",
          "Default.html",
          "Default.asp",
          "index.htm",
          "index.html",
          "iisstart.htm",
          "default.aspx",
          "index.php",
          "hostingstart.html"
        ],
        "netFrameworkVersion": "v4.0",
        "linuxFxVersion": "DOTNETCORE|8.0",
        "requestTracingEnabled": false,
        "remoteDebuggingEnabled": false,
        "remoteDebuggingVersion": "VS2022",
        "httpLoggingEnabled": true,
        "acrUseManagedIdentityCreds": false,
        "logsDirectorySizeLimit": 100,
        "detailedErrorLoggingEnabled": false,
        "scmType": "None",
        "use32BitWorkerProcess": true,
        "webSocketsEnabled": false,
        "alwaysOn": "[parameters('alwaysOn')]",
        "managedPipelineMode": "Integrated",
        "virtualApplications": [
          {
            "virtualPath": "/",
            "physicalPath": "site\\wwwroot",
            "preloadEnabled": false
          }
        ],
        "loadBalancing": "LeastRequests",
        "experiments": {
          "rampUpRules": []
        },
        "autoHealEnabled": false,
        "vnetRouteAllEnabled": false,
        "vnetPrivatePortsCount": 0,
        "publicNetworkAccess": "Enabled",
        "cors": {
          "allowedOrigins": [
            "*"
          ],
          "supportCredentials": false
        },
        "localMySqlEnabled": false,
        "ipSecurityRestrictions": [
          {
            "ipAddress": "Any",
            "action": "Allow",
            "priority": 2147483647,
            "name": "Allow all",
            "description": "Allow all access"
          }
        ],
        "scmIpSecurityRestrictions": [
          {
            "ipAddress": "Any",
            "action": "Allow",
            "priority": 2147483647,
            "name": "Allow all",
            "description": "Allow all access"
          }
        ],
        "scmIpSecurityRestrictionsUseMain": false,
        "http20Enabled": true,
        "minTlsVersion": "1.2",
        "scmMinTlsVersion": "1.2",
        "ftpsState": "FtpsOnly",
        "preWarmedInstanceCount": 0,
        "elasticWebAppScaleLimit": 0,
        "functionsRuntimeScaleMonitoringEnabled": false,
        "minimumElasticInstanceCount": 1,
        "azureStorageAccounts": {},
        "http20ProxyFlag": 0
      }
    }
  ]
}
